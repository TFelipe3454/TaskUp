<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F4"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="22dp"
        android:orientation="vertical">

        <!-- ðŸ§¾ TÃTULO -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Solicitud de servicio"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_marginBottom="20dp"/>

        <!-- ðŸªª TARJETA CONTENEDORA -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:padding="18dp"
            android:elevation="4dp">

            <!-- ðŸ§° Tipo de servicio -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tipo de servicio"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="6dp"
                android:textColor="#333333"/>

            <Spinner
                android:id="@+id/spinnerTipoServicio"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingHorizontal="12dp"
                android:background="@drawable/edit_text_bg"
                android:spinnerMode="dropdown"
                android:entries="@array/tipos_servicio"
                android:layout_marginBottom="18dp"/>

            <!-- ðŸ“ UbicaciÃ³n -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UbicaciÃ³n"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="6dp"
                android:textColor="#333333"/>

            <EditText
                android:id="@+id/etUbicacion"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edit_text_bg"
                android:hint="Ingresa tu direcciÃ³n"
                android:padding="12dp"
                android:layout_marginBottom="18dp"/>

            <!-- ðŸ“… Fecha -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="6dp"
                android:textColor="#333333"/>

            <EditText
                android:id="@+id/etFecha"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Selecciona la fecha"
                android:background="@drawable/edit_text_bg"
                android:padding="12dp"
                android:focusable="false"
                android:layout_marginBottom="18dp"/>

            <!-- â° Hora -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hora"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="6dp"
                android:textColor="#333333"/>

            <EditText
                android:id="@+id/etHora"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Selecciona la hora"
                android:background="@drawable/edit_text_bg"
                android:padding="12dp"
                android:focusable="false"
                android:layout_marginBottom="18dp"/>

            <!-- ðŸ“ DescripciÃ³n -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DescripciÃ³n del servicio"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="6dp"
                android:textColor="#333333"/>

            <EditText
                android:id="@+id/etDescripcion"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:hint="Describe lo que necesitasâ€¦"
                android:gravity="top"
                android:background="@drawable/edit_text_bg"
                android:padding="12dp"
                android:layout_marginBottom="18dp"/>

            <!-- ðŸ’° Precio -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Precio ofrecido"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="6dp"
                android:textColor="#333333"/>

            <EditText
                android:id="@+id/etPrecio"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Ej: 50000"
                android:inputType="number"
                android:background="@drawable/edit_text_bg"
                android:padding="12dp"
                android:layout_marginBottom="18dp"/>

            <!-- â˜Žï¸ TelÃ©fono -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TelÃ©fono de contacto"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="6dp"
                android:textColor="#333333"/>

            <EditText
                android:id="@+id/etTelefono"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Ej: 3001234567"
                android:inputType="phone"
                android:background="@drawable/edit_text_bg"
                android:padding="12dp"
                android:layout_marginBottom="22dp"/>

            <!-- ðŸš€ BotÃ³n -->
            <Button
                android:id="@+id/btnEnviarSolicitud"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Enviar solicitud"
                android:textStyle="bold"
                android:textSize="17sp"
                android:textColor="@color/white"
                android:background="@drawable/boton_borde_negro"
                android:elevation="3dp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>

