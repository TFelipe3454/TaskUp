<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".InicioUsuarioActivity">

    <!-- ðŸ” Barra de bÃºsqueda -->
    <LinearLayout
        android:id="@+id/search_bar_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="@drawable/search_bar_bg"
        android:elevation="4dp"
        android:layout_margin="12dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_search"
            app:tint="@android:color/darker_gray"
            android:layout_gravity="center_vertical"
            android:contentDescription="Buscar" />

        <EditText
            android:id="@+id/etBuscar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:hint="Buscar tareas, prestadores..."
            android:background="@android:color/transparent"
            android:paddingVertical="8dp"
            android:inputType="text"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/darker_gray" />
    </LinearLayout>

    <!-- ðŸ“œ Scroll principal con categorÃ­as y usuarios -->
    <ScrollView
        android:id="@+id/scroll_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="60dp"
        android:layout_below="@id/search_bar_container"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="80dp">

            <!-- ðŸ§© CategorÃ­as -->
            <LinearLayout
                android:id="@+id/categories_section"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginTop="60dp">

                <!-- ðŸ”¹ Primera fila -->
                <LinearLayout
                    android:id="@+id/category_row_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp">

                    <!-- Item 1 -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_marginHorizontal="16dp">

                        <ImageButton
                            android:id="@+id/btn_plomeria"
                            android:layout_width="90dp"
                            android:layout_height="68dp"
                            android:adjustViewBounds="true"
                            android:background="@android:color/transparent"
                            android:contentDescription="PlomerÃ­a"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/plomeria" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="PlomerÃ­a"
                            android:textColor="#000000"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Item 2 -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_marginHorizontal="16dp">

                        <ImageButton
                            android:id="@+id/btn_electricidad"
                            android:layout_width="90dp"
                            android:layout_height="68dp"
                            android:adjustViewBounds="true"
                            android:background="@android:color/transparent"
                            android:contentDescription="Electricidad"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/electricista" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Electricidad"
                            android:textColor="#000000"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Item 3 -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_marginHorizontal="16dp">

                        <ImageButton
                            android:id="@+id/btn_jardineria"
                            android:layout_width="90dp"
                            android:layout_height="68dp"
                            android:adjustViewBounds="true"
                            android:background="@android:color/transparent"
                            android:contentDescription="JardinerÃ­a"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/jardineria" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="JardinerÃ­a"
                            android:textColor="#000000"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

                <!-- ðŸ”¹ Segunda fila -->
                <LinearLayout
                    android:id="@+id/category_row_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_marginTop="24dp">

                    <!-- Item 4 -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_marginHorizontal="16dp">

                        <ImageButton
                            android:id="@+id/btn_tutoria"
                            android:layout_width="90dp"
                            android:layout_height="68dp"
                            android:adjustViewBounds="true"
                            android:background="@android:color/transparent"
                            android:contentDescription="Tutoria"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/discusion" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Tutoria"
                            android:textColor="#000000"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Item 5 -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_marginHorizontal="16dp">

                        <ImageButton
                            android:id="@+id/btn_entrega"
                            android:layout_width="90dp"
                            android:layout_height="68dp"
                            android:adjustViewBounds="true"
                            android:background="@android:color/transparent"
                            android:contentDescription="Entrega"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/receptor" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Entrega"
                            android:textColor="#000000"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Item 6 -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_marginHorizontal="16dp">

                        <ImageButton
                            android:id="@+id/btn_aseo"
                            android:layout_width="90dp"
                            android:layout_height="68dp"
                            android:adjustViewBounds="true"
                            android:background="@android:color/transparent"
                            android:contentDescription="Aseo"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/aseo" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Aseo"
                            android:textColor="#000000"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- ðŸ‘¤ Lista de usuarios recomendados -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Usuarios recomendados"
                android:textStyle="bold"
                android:textSize="18sp"
                android:padding="12dp"
                android:textColor="#000000" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerUsuarios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="12dp"
                android:clipToPadding="false"
                tools:listitem="@layout/item_usuario" />

        </LinearLayout>
    </ScrollView>

    <!-- ðŸ§­ Barra inferior de navegaciÃ³n -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/white"
        app:itemIconTint="@color/nav_item_color"
        app:itemTextColor="@color/nav_item_color"
        app:menu="@menu/bottom_nav_menu" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>

