<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 游댳 IMAGEN DE CABECERA (hero background) -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="260dp">

            <ImageView
                android:id="@+id/imgHeader"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/informe_de_contratados_1" />

            <!-- Texto encima de la imagen -->
            <TextView
                android:id="@+id/tvBienvenido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bienvenido a TaskUp"
                android:textColor="#FF5722"
                android:textSize="26sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:shadowColor="#80000000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="6"/>
        </FrameLayout>

        <!-- 游댳 CONTENEDOR DEL FORMULARIO -->
        <LinearLayout
            android:id="@+id/containerForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/form_container"
            android:padding="20dp"
            android:layout_margin="20dp"
            android:elevation="4dp">

            <!-- Campo Email -->
            <EditText
                android:id="@+id/etCorreo"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:hint="Correo electr칩nico"
                android:background="@drawable/input_style"
                android:paddingStart="16dp"
                android:inputType="textEmailAddress"
                android:layout_marginBottom="16dp"/>

            <!-- Campo Contrase침a -->
            <EditText
                android:id="@+id/etContrasena"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:hint="Contrase침a"
                android:background="@drawable/input_style"
                android:paddingStart="16dp"
                android:inputType="textPassword" />

            <!-- Bot칩n ingresar -->
            <Button
                android:id="@+id/btnIngresar"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:text="INGRESAR"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:layout_marginTop="25dp"
                android:background="@drawable/btn_style"/>

            <!-- Registrarse -->
            <TextView
                android:id="@+id/btnSwitchRegistrar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="쯅o tienes cuenta? Reg칤strate"
                android:textColor="#FF7A00"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_marginTop="18dp"
                android:gravity="center"/>
        </LinearLayout>

        <!-- 쯆lvidaste contrase침a? -->
        <TextView
            android:id="@+id/tvOlvido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="쯆lvidaste tu contrase침a?"
            android:textSize="14sp"
            android:textColor="#555555"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp" />

    </LinearLayout>

</ScrollView>

