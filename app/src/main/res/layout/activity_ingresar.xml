<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".IngresarActivity">

    <!-- ðŸ” Switch superior entre Ingresar / Registrarse -->
    <LinearLayout
        android:id="@+id/topSwitch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btnSwitchIngresar"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="Ingresar"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:backgroundTint="#FF7A00"
            android:background="@drawable/btn_style_orange" />

        <Button
            android:id="@+id/btnSwitchRegistrar"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="Registrarse"
            android:textColor="#FF7A00"
            android:textStyle="bold"
            android:backgroundTint="#FFFFFF"
            android:background="@drawable/btn_style_border" />
    </LinearLayout>

    <!-- ðŸ–¼ï¸ Imagen o ilustraciÃ³n -->
    <ImageView
        android:id="@+id/imgIllustration"
        android:layout_width="280dp"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/informe_de_contratados_1"
        app:tint="@null"
        app:layout_constraintTop_toBottomOf="@id/topSwitch"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ðŸ‘‹ TÃ­tulo -->
    <TextView
        android:id="@+id/tvBienvenido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bienvenido a TaskUp"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/imgIllustration"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- âœ‰ï¸ Campo Correo -->
    <EditText
        android:id="@+id/etCorreo"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:hint="Correo"
        android:inputType="textEmailAddress"
        android:background="@drawable/field_style"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvBienvenido"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="40dp" />

    <!-- ðŸ”’ Campo ContraseÃ±a -->
    <EditText
        android:id="@+id/etContrasena"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:hint="ContraseÃ±a"
        android:inputType="textPassword"
        android:background="@drawable/field_style"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/etCorreo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="40dp" />

    <!-- ðŸ”˜ BotÃ³n Ingresar -->
    <Button
        android:id="@+id/btnIngresar"
        android:layout_width="250dp"
        android:layout_height="55dp"
        android:text="Ingresar"
        android:textColor="#000000"
        android:textSize="18sp"
        android:background="@drawable/btn_style"
        app:layout_constraintTop_toBottomOf="@id/etContrasena"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp" />



    <!-- â“ OlvidÃ³ su contraseÃ±a -->
    <TextView
        android:id="@+id/tvOlvido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Â¿OlvidÃ³ su contraseÃ±a?"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnIngresar" />

</androidx.constraintlayout.widget.ConstraintLayout>
